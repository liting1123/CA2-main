<!DOCTYPE html>
<html>
<head>
    <title>Edit Cart</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body style="background-image:url('https://i.pinimg.com/736x/d2/4c/9e/d24c9eba4ebc39ed95933d1ab85563be.jpg'); background-size: cover;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">Foodiess</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <% if (user && user.role === 'admin') { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Admin</a>
                    </li>
                    <% } %>
                    <% if (user && user.role === 'user') { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/menu">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/favourites">Favourites <i class="fas fa-heart"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/cart">Cart</a>
                    </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-1"></i>Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <div class="text-center"><h2>Edit Cart <i class="fas fa-edit"></i></h2></div>
        <br>
        <% if (cart && cart.length > 0) { %>
        <form action="/editCart" method="POST">
            <table class="table table-hover text-center">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% let total = 0; %>
                    <% cart.forEach(item => { %>
                        <% const itemTotal = item.price * item.quantity; %>
                        <% total += itemTotal; %>
                        <tr>
                            <td><%= item.name %></td>
                            <td><img src="/Images/<%= item.image %>" class="table-img" alt="<%= item.name %>"></td>
                            <td>
                                <input type="number" name="quantity_<%= item.idmenuItems %>" value="<%= item.quantity %>" min="1" class="form-control form-control-sm" style="width: 80px; margin: auto;">
                                <input type="hidden" name="itemIds" value="<%= item.idmenuItems %>">
                            </td>
                            <td>$<%= item.price %></td>
                            <td>$<%= itemTotal.toFixed(2) %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <div class="cart-total">
                Cart Total: $<%= total.toFixed(2) %>
            </div>
            <div class="button-group">
                <a href="/menu" class="btn btn-secondary me-2">Back to Menu</a>
                <a href="/cart" class="btn btn-warning me-2">Cancel</a>
                <button type="submit" class="btn btn-primary">Update Cart</button>
            </div>
        </form>
        <% } else { %>
            <p class="text-center mt-5">Your cart is empty. Go to <a href="/menu">Menu</a> to add some items!</p>
        <% } %>
    </div>
</body>
</html>

