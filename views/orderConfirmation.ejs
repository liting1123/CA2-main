<!-- orderConfirmation -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .img-thumbnail {
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Order Confirmed!</h2>

        <% if (successMessages && successMessages.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <% successMessages.forEach(msg => { %>
                    <%= msg %><br>
                <% }) %>
            </div>
        <% } %>

        <% if (errorMessages && errorMessages.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <% errorMessages.forEach(msg => { %>
                    <%= msg %><br>
                <% }) %>
            </div>
        <% } %>

        <% if (order) { %>
            <p class="lead text-center">Thank you for your order! Your order #<strong><%= order.idorder %></strong> has been placed.</p>

            <h3 class="mt-4">Order Details:</h3>
            <ul class="list-group mb-4">
                <li class="list-group-item"><strong>Order ID:</strong> <%= order.idorder %></li>
                <li class="list-group-item"><strong>Order Date:</strong> <%= new Date(order.order_date).toLocaleString() %></li>
                <li class="list-group-item"><strong>Total Amount:</strong> $<%= order.total_amount.toFixed(2) %></li>
                <li class="list-group-item"><strong>Status:</strong> <span class="badge bg-info"><%= order.status %></span></li>
                <% if (order.shipping_address) { %>
                    <li class="list-group-item"><strong>Shipping Address:</strong> <%= order.shipping_address %></li>
                <% } %>
            </ul>

            <h4>Items in Your Order:</h4>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Image</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-end">Price</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% order.items.forEach(item => { %>
                            <tr>
                                <td><%= item.name %></td>
                                <td><img src="/images/<%= item.image %>" alt="<%= item.name %>" width="70" height="70" class="img-thumbnail"></td>
                                <td class="text-center"><%= item.quantity %></td>
                                <td class="text-end">$<%= item.item_price.toFixed(2) %></td> <%-- Adjusted to item.item_price --%>
                                <td class="text-end">$<%=(item.quantity * item.item_price).toFixed(2)%></td> <%-- Adjusted to item.item_price --%>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <div class="mt-4 text-center">
                <a href="/dashboard" class="btn btn-secondary me-2">Back to Dashboard</a>
                <a href="/checkout/<%= order.idorder %>" class="btn btn-success">Proceed to Payment</a>
            </div>

        <% } else { %>
            <div class="alert alert-warning text-center" role="alert">
                <p>No order details found for the provided ID or you do not have permission.</p>
                <a href="/dashboard" class="btn btn-primary mt-3">Go to Dashboard</a>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>